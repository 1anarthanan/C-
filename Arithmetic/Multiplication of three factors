// Multiplication of three factors
using System;

public class Multiplication
{
    public static void Main(string[] args)
    {
        Console.WriteLine("--Multiplication of three factors---");
        Console.WriteLine("Enter the num1:");
        var num1=Convert.ToInt32(Console.ReadLine());//get input from user,using type casting
        Console.WriteLine("Enter the num2");
        var num2=Convert.ToInt32(Console.ReadLine());//get input from user,using type casting
        Console.WriteLine("Enter the num3:");
        var num3=Convert.ToInt32(Console.ReadLine());//get input from user,using type casting
        Console.WriteLine("{0}*{1}*{2}={3}",num1,num2,num3,(num1*num2*num3));
      
        
    }
}
